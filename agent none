pipeline {
            agent none
		               stages {
						         stage('build') {
											agent( lable 'node1'}
																	step {
																	      sh 'sleep 5'; echo "this is build stage running in slave1"
																		  
																	}
												}
		              stage('deploy') {
											agent( lable 'master'}
																	step {
																	      sh 'sleep 5'; echo "this is deploy stage running in master"
																		  
																	}
												}										
			
			 stage('test') {
											agent( lable 'node1'}
																	step {
																	      sh 'sleep 5'; echo "this is test stage running in node1"
																		  
																	}
												}	
			
			
			
			
			           }
		}			
